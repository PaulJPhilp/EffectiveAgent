{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "enabled": false
  },
  "javascript": {
    "globals": ["Buffer", "crypto"],
    "parser": {
      "unsafeParameterDecoratorsEnabled": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noConsole": "off",
        "noImplicitAnyLet": "error",
        "noExplicitAny": "off"
      },
      "style": {
        "all": false
      },
      "complexity": {
        "all": false
      }
    },
    "ignore": [
      "**/data/**",
      "**/dist/**",
      "**/node_modules/**"
    ]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}